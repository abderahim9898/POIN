{
  "hosting": {
    "public": "dist/spa",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "my-app",
          "region": "us-central1"
        }
      },
      {
        "source": "destination",
        "destination": "/index.html"
      }
    ]
  }
}
